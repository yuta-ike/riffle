{
  "name": "riffle",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/front",
      "packages/server"
    ],
    "nohoist": [
      "eslint",
      "@prisma/client"
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:front": "yarn workspace front dev",
    "dev:server": "yarn workspace server dev",
    "build": "run-p build:*",
    "build:front": "yarn workspace front build",
    "build:server": "yarn workspace server build",
    "start": "run-p dev:*",
    "start:front": "yarn workspace front start",
    "start:server": "yarn workspace server start",
    "lint": "run-p lint:*",
    "lint:front": "yarn workspace front lint",
    "lint:server": "yarn workspace server lint",
    "type-check": "run-p type-check:*",
    "type-check:front": "yarn workspace front type-check",
    "type-check:server": "yarn workspace front type-check",
    "format": "run-p format:*",
    "format:front": "yarn workspace front format",
    "format:server": "yarn workspace server format",
    "fix": "run-p fix:*",
    "fix:front": "yarn workspace front fix",
    "fix:server": "yarn workspace server fix",
    "gen:api-type": "openapi-typescript ./docs/riffle-api/reference/riffle-api.yaml --output ./packages/server/src/types/generated/schema.ts --prettier-config ./prettierrc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-unused-imports": "^1.1.5",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^4.4.0",
    "prettier": "^2.4.1",
    "scaffdog": "^1.0.1",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "16.x",
    "npm": "use_yarn_instead"
  }
}