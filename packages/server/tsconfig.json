{
  "extends": "../../tsconfig.json",
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
